<section>
    <div class="container mt-4">
        <div class="row justify-content-center">

            <div class="col-md-9">
                <h2 class="text-center">EDIT PRODUCTS</h2>
                <form action="/admin/edit-product/{{product.[0]._id}}" method="POST" enctype="multipart/form-data">

                    <label for="">NAME</label>
                    <input type="text" name="name" value="{{product.[0].name}}" class="form-control">

                   <div class="form-inline col-md-12 m-4">
                        <div class="form-group col-md-6">
                            <label for="inputState">Category</label>
                            <select id="inputState" class="form-control" name="category">
                                <option selected hidden>{{product.[0].category.[0]}}</option>
                              {{#each getcategory}}
                                <option>{{this.name}}</option>
                             {{/each}}
                            </select>
                               
                        </div>

                        <div class="form-group col-md-6">
                            <label for="inputState">Brand</label>
                            <select id="inputState" class="form-control" name="brand" >
                               <option selected hidden>{{product.[0].brand.[0]}}</option>
                                {{#each brand}}
                                <option>{{this.name}}</option>
                             {{/each}}
                              
                            </select>
                        </div>
                    </div>
                     <div class="form-inline col-md-12 m-4">
                        <div class="form-group col-md-6">
                            <label for="inputState">Sub Category</label>
                            <select id="inputState" class="form-control" name="subcategory">
                                <option selected hidden>{{product.[0].subcategory.[0]}}</option>
                               {{#each getsubcategory}}
                                <option>{{this.name}}</option>
                               
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-group">
                             
                       <label >Stock</label> <input type="text" name="stock" class="form-control" value="{{product.[0].stock}}">
                        </div>
                    </div>
                    <label for="">Price</label>
                    <input type="number" name="price" value="{{product.[0].price}}" class="form-control">

                    <label for="">cutting Price</label>
                    <input type="number" name="cuttingprice" value="{{product.[0].cuttingprice}}" class="form-control">

                    <label for="">Description</label>
                    <input type="text" name="description" value="{{product.[0].description}}" class="form-control">

                    <label for="">Image</label>
                    {{#each product.[0].images}}
                    <img src="/product-images/{{this}}" alt="" style="width: 100px;height: 130px">
                    {{/each}}
                    <input type="file" name="images" class="form-control" multiple>

                    <button type="submit" class="btn btn-success mt-4"> Submit</button>
                </form>

            </div>

        </div>
    </div>
</section>