<div class="row justify-content-center">
    <div class="col-xl-12">
        <div class="card m-b-30">
            <div class="card-body">
                <h4 class="mt-0 header-title mb-4">Products</h4>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col"></th>
                                <th scope="col">Name</th>
                                <th scope="col">brand</th>
                                <th scope="col">category</th>
                                <th scope="col">sub category</th>
                                <th scope="col">price</th>
                                 <th scope="col">cuttingprice</th>
                                <th scope="col">stock</th>
                            
                                <th scope="col">Description</th>
                                <th scope="col">image</th>
                                <th scope="col" colspan="2">actions</th>

                            </tr>
                        </thead>
                        {{#each products }}
                        
                        <tbody>

                            

                            <tr>
                               <td>{{inc @index}}</td>
                                <td>{{this.name}}</td>
                                <td>{{this.brand}}</td>
                                <td>{{this.category}}</td>
                                <td>{{this.subcategory}}</td>
                                <td> {{this.price}}</td>
                                 <td> {{this.cuttingprice}}</td>
                                 <td> {{this.stock}}</td>
                                 <td> {{this.description}}</td>
                                <td>
                                    <img style="width:50px ;height:50px" src="/product-images/{{this.images.[0]}}" alt=""></td>
                                <td>
                                    <div>
                                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary ">Edit</a>
                                    </div>
                                    
                                </td>
                                <td>
                                    <div>
                                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger ">Delete</a>
                                    </div>
                                </td>
                            </tr>


                        </tbody>
                        {{/each}}
                    </table>
                </div>







            </div>
        </div>
    </div>

</div>
<!-- END ROW -->