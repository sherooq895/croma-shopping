<div class="row">
    <div class="col-12">
        <div class="card m-b-30">
            <div class="card-body">

                <div class="row mb-4">
                    <div class="col-md-6 mb-3">
                        <h4 class="mt-0 header-title">Sales Report</h4>
                        <form action="/admin/salesreport-data-date" method="post">
                            <div class="input-daterange input-group" id="date-range">
                                <input type="date" class="form-control" name="start" placeholder="Start Date" />
                                <input type="text" class="form-control text-center" value="TO" readonly
                                    style="width:20px;" placeholder="Start Date" />
                                <input type="date" class="form-control" name="end" placeholder="End Date" />
                                <button type="submit" class="btn ml-3 btn-success">Search</button>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-3">
                        <h6> Total Sale Amount <br> <h4>₹ {{datasort.salereportamount.[0].saletotal}}</h4> </h6>
                    </div>
                    <div class="col-md-3">
                        <h6><h4 class="mt-0 header-title">SALED PRODUCTS</h4>  <small>From :</small> <span>{{datasort.body.start}}</span>  <br>  <small>To :</small> <span>{{datasort.body.end}}</span></h6>
                    </div>
                </div>

                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap"
                    style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Item</th>
                            <th>User</th>
                            <th>Price</th>
                            <th>Qty</th>
                            <th>Total</th>
                            {{!-- <th>Start date</th> --}}
                            {{!-- <th>Salary</th> --}}
                        </tr>
                    </thead>
                    <tbody>
                        {{#if datasort.data}}

                        {{#each datasort.data}}
                        <tr>
                            <td>{{this.date}}</td>
                            <td>
                                <div class="media">
                                    <div class="thumb float-left">
                                        <a href="#">
                                            <img class="sales_report rounded-circle" style="width:50px ;height:50px"
                                                src="/product-images/{{this.images.[0]}}" alt="">
                                        </a>
                                    </div>
                                    <div class="media-body">
                                        {{this.name}}
                                    </div>
                                </div>

                            </td>
                            <td>
                                {{this.username.[0]}}<br>
                                {{this.deliveryDetails.mobile}}
                            </td>
                            <td>
                                <p>Price :<span>₹ {{this.cuttingprice.[0]}}</span></p>
                                <p>discounted Price :₹ <span> {{this.price.[0]}}</span></p>
                                <p>Coupon :<span> {{this.coupon}}</span></p>
                            </td>
                            <td>{{this.quantity}}</td>
                            <td>₹ {{this.totalAmount}}</td>
                            {{!-- <td>2011/04/25</td> --}}
                            {{!-- <td>$320,800</td> --}}
                        </tr>
                        {{/each}}


                        {{else}}

                        {{#each datasort.orderdata}}
                        <tr>
                            <td>{{this.date}}</td>
                            <td>
                                <div class="media">
                                    <div class="thumb float-left">
                                        <a href="#">
                                            <img class="sales_report rounded-circle" style="width:50px ;height:50px"
                                                src="/product-images/{{this.images.[0]}}" alt="">
                                        </a>
                                    </div>
                                    <div class="media-body">
                                        {{this.name}}
                                    </div>
                                </div>

                            </td>
                            <td>
                                {{this.username.[0]}}<br>
                                {{this.deliveryDetails.mobile}}
                            </td>
                            <td>
                                <p>Price :<span>₹ {{this.cuttingprice.[0]}}</span></p>
                                <p>discounted Price :<span>₹ {{this.price.[0]}}</span></p>
                                <p>Coupon :<span> {{this.coupon}}</span></p>
                            </td>
                            <td>{{this.quantity}}</td>
                            <td> ₹ {{this.totalAmount}}</td>
                            {{!-- <td>2011/04/25</td> --}}
                            {{!-- <td>$320,800</td> --}}
                        </tr>
                        {{/each}}
                        {{/if}}
                    </tbody>
                </table>

            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->