<div class="row justify-content-center">
    <div class="col-xl-12">
        <div class="card m-b-30">
            <div class="card-body">
                <h2 class="mt-0 header-title mb-4 " style="font-size:20px"> Coupens</h2>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col"></th>
                                <th scope="col">Coupen Name</th>


                                <th scope="col">Percentage</th>
                                <th scope="col"> Expire Date</th>
                               
                                <th scope="col" colspan="2">Actions</th>


                            </tr>
                        </thead>
                        {{#each coupens}}

                        <tbody>
                            <tr>
                                 <td>{{inc @index}}</td>
                               <td>{{this.name}}</td>
                                <td>{{this.Percentage}}</td>
                               
                                <td>{{this.Exparedate}}</td>
                              
                                <td>
                                    <div>
                                        <a href="/admin/delete-coupen/{{this._id}}" class="btn btn-danger ">Delete</a>
                                    </div>
                                </td>
                               

                                </td>

                            </tr>


                        </tbody>
                        {{/each}}
                    </table>
                </div>


            </div>
        </div>
    </div>
    <script>

         function deleteProduct(orderId, proId) {
                    console.log("delete from order");
                    $.ajax({
                        url: "/delete-orderproduct",
                        data: {
                        order: orderId,
                            product: proId,
                        },
                        method: "post",
                        success: (response) => {
                            if (response.removed) {
                                alert("Product Removed from cart");
                                location.reload();
                            }
                        },
                    });
                }

    </script>

</div>
<!-- END ROW -->