<div class="row justify-content-center">
    <div class="col-xl-12">
        <div class="card m-b-30">
            <div class="card-body">
                <h4 class="mt-0 header-title mb-4">BANNERS</h4>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col"></th>
                                <th scope="col">Name</th>
                                
                                <th scope="col">Description</th>
                                <th scope="col">image</th>
                                <th scope="col" colspan="2">actions</th>

                            </tr>
                        </thead>
                        {{#each banners }}
                        
                        <tbody>

                            

                            <tr>
                           <td>{{inc @index}}</td>
                                <td>{{this.name}}</td>
                               
                                 <td> {{this.description}}</td>
                                <td>
                                    <img style="width:50px ;height:50px" src="/product-images/{{this.image}}" alt=""></td>
                                <td>
                                    <div>
                                        <a href="/admin/edit-banner/{{this._id}}" class="btn btn-primary ">Edit</a>
                                    </div>
                                    
                                </td>
                                <td>
                                    <div>
                                        <a href="/admin/delete-banner/{{this._id}}" class="btn btn-danger ">Delete</a>
                                    </div>
                                </td>
                            </tr>


                        </tbody>
                        {{/each}}
                    </table>
                </div>







            </div>
        </div>
    </div>

</div>
<!-- END ROW -->