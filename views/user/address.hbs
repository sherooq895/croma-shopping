<div class="container">
    <div class="row justify-content-center">
    <div class="col-xl-12">
        <div class="card m-b-30">
            <div class="card-body">
                <h2 class="mt-0 header-title mb-4 " style="font-size:25px">Address</h2>

                <div class="table-responsive">
                    <table class="table table-hover">
                         <div class="d-flex-right " style="border-bottom: 20px">
                                        <a href="/add-address"  class="btn btn-primary" style="color:white">Add Address</a>
                                    </div>
                        <thead>
                            <tr>
                                <th scope="col"></th>
                               
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Address</th>
                                <th scope="col">State</th>
                                <th scope="col">Actions</th>
                                <th scope="col"></th>

                               

                            </tr>
                        </thead>
                        
                        {{#each address}}

                        <tbody>
                            <tr>
                                <td>{{@index}}</td>
                                <td>{{this.name}}</td>
                                <td>{{this.email}}</td>
                                <td>{{this.address}}</td>
                                <td>{{this.state}}</td>
                              
                              
                                 <td>  <div>
                                        <a href="" class="btn btn-primary ">Edit</a>
                                    </div>
                                    </td>
                                    <td>  <div>
                                        <a href="deleteaddress/{{this._id}}" class="btn btn-primary ">Delete</a>
                                    </div>
                                    </td>
                               
                                  <td> 
                                    </td>

                                </td>

                            </tr>


                        </tbody>
                        {{/each}}
                    </table>
                </div>

            </div>
        </div>
    </div>
    <script>
         function deleteProduct(orderId, proId) {
                    console.log("delete from order");
                    $.ajax({
                        url: "/delete-orderproduct",
                        data: {
                        order: orderId,
                            product: proId,
                        },
                        method: "post",
                        success: (response) => {
                            if (response.removed) {
                                alert("cancel order?");
                                location.reload();
                            }
                        },
                    });
                }

    </script>

</div>
<!-- END ROW -->

</div>